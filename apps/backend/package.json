{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npx jest --silent",
    "build": "npx tsc",
    "start": "node build/src/index.js",
    "dev": "nodemon src/index.ts",
    "tsc": "tsc",
    "lint:check": "pnpm eslint .",
    "lint:fix": "pnpm eslint --fix .",
    "migrate:up": "node-pg-migrate -m='src/db/migrations' up",
    "migrate:down": "node-pg-migrate down",
    "migrate:redo": "node-pg-migrate redo",
    "migrate:create": "node-pg-migrate -m='src/db/migrations' -j='sql' create",
    "oa:generate-routes": "npx tsoa routes",
    "oa:generate-schema": "pnpm run oa:generate-routes && npx tsoa spec",
    "oa:generate-types": "pnpm run oa:generate-schema && npx swagger-typescript-api --axios -p tsoa/swagger.json -o ../types/src -n backendApi.ts",
    "kysely:generate-types": "kysely-codegen --camel-case --out-file='src/db/types.d.ts'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tsoa/runtime": "^6.4.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jose": "^5.4.0",
    "kysely": "^0.27.3",
    "kysely-postgres-js": "^2.0.0",
    "pg": "^8.12.0",
    "postgres": "^3.4.4",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-typescript": "^7.24.1",
    "@jest/globals": "^29.7.0",
    "@testcontainers/postgresql": "^10.10.4",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.11.6",
    "@types/swagger-ui-express": "^4.1.6",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.23.0",
    "jest": "^29.7.0",
    "kysely-codegen": "^0.15.0",
    "node-pg-migrate": "^7.6.0",
    "nodemon": "^3.1.4",
    "swagger-typescript-api": "^13.0.21",
    "testcontainers": "^10.10.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
